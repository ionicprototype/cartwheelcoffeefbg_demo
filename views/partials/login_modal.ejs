<!-- Login Modal -->
<div style='color: black' class='modal fade' id='loginModal' tabindex='-1' role='dialog' aria-hidden='true'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Login Options</h5>
                <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                    <% if(user) { %>
                        <h5>Currently logged in as: <%= user.username %></h5>
                        <a href='/auth/logout' role='button' class='btn btn-success'>Logout</a>
                    <% } else { %>    
                        <a href='/auth/google' role='button' class='btn btn-success'>Login</a>
                        <a href='/auth/logout' role='button' class='btn btn-success'>Logout</a>
                    <% } %>
                </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-danger' data-dismiss='modal'>Exit</button>
            </div>
        </div>
    </div>
</div>
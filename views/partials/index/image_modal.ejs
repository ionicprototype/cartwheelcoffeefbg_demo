

<!-- Modal for Images -->
<div style='color: black' class='modal fade' id='newImageModal' tabindex='-1' role='dialog' aria-label='Hide' aria-hidden='true'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Upload New Image</h5>
                <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <form class='container mb-0' action='/image' method='POST' enctype='multipart/form-data'>
                <div class='modal-body'>            
                    <div class='form-group'>
                        <label class='custom-file-label'>Choose file</label>
                        <input type='file' name='file' id='file' class='custom-file-input'>
                    </div>
                </div>
                <div class='modal-footer mt-0'>
                    <button type='submit' class='btn btn-success' aria-label='Post'>Post</button>
                    <button type='button' class='btn btn-danger' data-dismiss='modal' aria-label='Cancel'>Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>